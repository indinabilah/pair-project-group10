<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="Content-Type" content="text/html;charset=UTF-8">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
        <title>RestoGO!</title>
    </head>
    <body>
        <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
            <!-- Brand -->
            <a class="navbar-brand" href="/home">RestoGO!</a>
            
            <!-- Links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                <a class="nav-link" href="/cashiers">Cashier</a>
                </li>
                <li class="nav-item">
                <a class="nav-link" href="/customers">Customer</a>
                </li>
                <li class="nav-item">
                <a class="nav-link" href="/menus">Menu</a>
                </li>
            </ul disabled>
        </nav>
        <center>
            <p>Menu Makanan</p>
            <form action="/orders/add" method="post">
                <label for="">Customer Name</label>
                <select name="CustomerId" id="">
                        <% dataCus.forEach(function(item) {%>
                        <option value="<%= item.id %>"><%= item.name %></option>
                        <%})%>
                </select>
                <br>
                <label for="">List Menu</label>
                <select name="MenuId" id="">
                        <% dataMenu.forEach(function(item) {%>
                        <option value="<%= item.id %>"><%= item.name %></option>
                        <%})%>
                </select>
                <br>
                <br>
                <label for="quantity">Jumlah Pesanan</label>
                <input type="number" name="quantity" id="" required>
                <br>
                <br>
                <button type="submit" class="btn btn-info">pesan</button>
            </form>
        </center>
    </body>
</html>